@model TicTacToeWebApp.Models.GameViewModel

<div class="bg-text">
    <table class="table table-bordered">
        <tr>
            <td class="td-bg">
                Player Name
            </td>
            <td class="td-bg">
                Symbol
            </td>
            <td class="td-bg">
                Number of Wins
            </td>
        </tr>
        <tr>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player1.Name)</b>
            </td>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player1.Symbol)</b>
            </td>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player1.NumOfWins)</b>
            </td>
        </tr>
        <tr>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player2.Name)</b>
            </td>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player2.Symbol)</b>
            </td>
            <td>
                <b class="td-color">@Html.DisplayFor(model => Model.Player2.NumOfWins)</b>
            </td>
        </tr>
    </table>

    @Ajax.ActionLink("Reset", "Reset", null, new AjaxOptions { UpdateTargetId = "game" },
    new { @class = "btn btn-warning btn-sm", @style = "text-decoration:none;" })
    </div>
    @*<div class="alert alert-success alert-dismissable show col-md-offset-4 col-md-4" role="alert" style="margin-top:5px;">
        <strong>@ViewBag.Message</strong>
    </div>*@
    @*<div class="col-md-offset-4 col-md-4"><h3><b>@ViewBag.Message</b></h3></div>
    *@

<div class="bg-text main-game">
    
    <div class="row">
        <div class="alert alert-success alert-dismissable show col-md-offset-4 col-md-4" role="alert" style="margin-top:5px;">
            <strong>@ViewBag.Message</strong>
        </div>


        <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <table class="table table-bordered col-md-offset-4 col-md-4 my-table">
                @{int index = 0; }
                @for (int row = 0; row < Model.Grid; row++)
                {

                    <tr>
                        @for (int col = 0; col < Model.Grid; col++)
                        {
                            <td style="padding: unset !important; border: none !important">
                                @Ajax.ActionLink(Model.Board[index].ToString(), "Game",
                               new { id = index, firstPlayerName = Model.Player1.Name, secondPlayerName = Model.Player2.Name },
                               new AjaxOptions { UpdateTargetId = "game" },
                               new { @class = "btn main-btn", @style = "text-decoration:none; width:100%" })
                            </td>

                            index++;
                        }
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
